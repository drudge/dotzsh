# Git: these are used by git and will override anything in global config

export GIT_COMMITTER_NAME=$FULL_NAME
export GIT_COMMITTER_EMAIL=$EMAIL
export GIT_AUTHOR_NAME=$FULL_NAME
export GIT_AUTHOR_EMAIL=$EMAIL

